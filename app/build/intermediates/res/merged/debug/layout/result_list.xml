<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:showDividers="middle"
    android:divider="?android:listDivider"
    android:dividerPadding="10dp"
    android:background="@drawable/shadow_18"
    android:id="@+id/ResultLayout">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/flightResultLayout">

        <TextView
        android:id="@+id/FlightName"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
        android:text="flight_name"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"/>
        <TextView
        android:id="@+id/FlightPrice"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        android:text="flight_price"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"/>
        </LinearLayout>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/hotelResultLayout">

    <ImageView
        android:id="@+id/HotelImage"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hotel2"
        android:layout_marginTop="3dp"
        android:scaleType="centerCrop"/>
     <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
         android:layout_marginLeft="10dp">
    <TextView
        android:id="@+id/HotelName"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="hotel_name"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"/>

         <LinearLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal"
             android:layout_marginTop="6dp">
         <TextView
             android:id="@+id/StarRate"

             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="star"
             android:layout_marginRight="3dp"
             android:layout_marginTop="3dp"
             android:textAppearance="?android:textAppearanceSmall"
             android:layout_marginBottom="3dp"
             android:textStyle="bold"/>
             <ImageView

                 android:layout_width="30dp"
                 android:layout_height="25dp"
                 android:src="@drawable/star1"
                 android:layout_marginLeft="3dp"
                 android:scaleType="centerInside"/>
             </LinearLayout>
         <TextView
             android:id="@+id/Rating"
             android:layout_weight="1"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="rating"
             android:layout_marginRight="20dp"
             android:textAppearance="?android:textAppearanceSmall"
             android:textStyle="bold"/>
    <TextView
        android:id="@+id/HotelPrice"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="hotel_price"
        android:layout_marginRight="20dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"/>

    </LinearLayout>
        </LinearLayout>


</LinearLayout>